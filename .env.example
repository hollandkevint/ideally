# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# AI Integration (Story 1.4)
ANTHROPIC_API_KEY=your_anthropic_api_key
NEXT_PUBLIC_MAX_CONVERSATION_LENGTH=50

# Canvas Features (Stories 1.5-1.7)
NEXT_PUBLIC_ENABLE_CANVAS=false
NEXT_PUBLIC_MAX_CANVAS_ELEMENTS=500
NEXT_PUBLIC_ENABLE_MARKDOWN_UPLOAD=true

# Context Bridging (Story 1.7)
NEXT_PUBLIC_ENABLE_CONTEXT_BRIDGING=true
NEXT_PUBLIC_SEMANTIC_SEARCH_THRESHOLD=0.7
NEXT_PUBLIC_MAX_CONTEXT_BRIDGES=1000
OPENAI_API_KEY=your_openai_key

# Mermaid Integration (Story 1.6)
NEXT_PUBLIC_MERMAID_THEME=business-theme
NEXT_PUBLIC_MAX_DIAGRAM_COMPLEXITY=500
NEXT_PUBLIC_ENABLE_DIAGRAM_COLLABORATION=true

# Chat Features (Story 1.4)
NEXT_PUBLIC_ENABLE_MESSAGE_EXPORT=true
NEXT_PUBLIC_STRATEGIC_FRAMEWORKS_ENABLED=true

# Workflow Orchestration (Story 1.7)
NEXT_PUBLIC_ENABLE_GUIDED_WORKFLOWS=true
NEXT_PUBLIC_DEFAULT_WORKFLOW_TIMEOUT=3600